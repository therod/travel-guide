<%= form_with(model: location, local:true) do |form| %>

<% if location.errors.any? %>
<ul>
  <% location.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<div class="field">
  <%= form.label :title %>
  <%= form.text_field :title, id: :location_title %>
</div>

<div class="field">
  <%= form.label :subtitle %>
  <%= form.text_field :subtitle, id: :location_subtitle %>
</div>

<div class="field">
  <%= form.label :description %>
  <%= form.text_area :description, id: :location_description %>
</div>

<div class="field">
  <%= form.label :header_image %>
  <%= form.file_field :header_image, id: :location_image_header %>
</div>

<div class="action">
  <%= form.submit %>
</div>

<% end %>
